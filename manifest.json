{
  "manifest_version": 2,
  "name": "Study Buddy",
  "description": "Study Enhancement Tool",
  "version": "1.0",
  "browser_action": {
    "default_icon": "StudyBuddy.png",
    "default_title": "Study Buddy",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "js": [ "jquery-2.1.4.min.js", "content.js", "block.js"],
    "css": ["timer.css", "block.css"]
  }],
  "permissions": [
    "activeTab",
    "webNavigation",
    "https://ajax.googleapis.com/",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs"
  ]
}
